{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/",
    "ignore": [
      ".firebaserc",
      "database.rules.json",
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/src/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
